<main class="lista-vacantes">
  <h2>Lista de Vagas</h2>

  {{#if vacantes.length}}

  {{#each vacantes}}
    <div class="vacante">
      <div class="caja">
        <h3>{{empresa}}</h3>
        <p class='puesto'>{{titulo}}</p>
      </div>
      <div class="caja">
        <p class="etiqueta">Endereço</p>
        <p class="nombre">{{ubicacion}}</p>
      </div>
      <div class="caja">
        <p class="etiqueta">Contrato</p>
        <p class="nombre contrato">{{contrato}}</p>
      </div>
      <div class="caja centrar-Vertical">
        <a href="/vacantes/{{url}}" class="btn btn-verde">Ler Mais</a>
      </div>
    </div><!-- vacante -->
  {{/each}}
  {{else}}
  <p>Não há vagas</p>
  {{/if}}
</main>