<div class="contenido-superior vacante contenedor">
  <div class="caja">
    <p class="etiqueta">Empresa</p>
    <p class="nombre">{{vacante.empresa}}</p>
  </div>
  <div class="caja">
    <p class="etiqueta">Localização</p>
    <p class="nombre">{{vacante.ubicacion}}</p>
  </div>
  <div class="caja">
    <p class="etiqueta">Contrato</p>
    <p class="nombre contrato">{{vacante.contrato}}</p>
  </div>
  <div class="caja">
    <p class="etiqueta">Salario</p>
    <p class="nombre contrato">$ {{vacante.salario}}</p>
  </div>
</div>

<div class="vacante-contenedor contenedor">
  <main class="contenido">
    <h2>Descrição do Posto</h2>
    <div class="vacante-descripcion">
      {{{vacante.descripcion}}}
    </div>
    <a href="/vacantes/editar/{{vacante.url}}" class="btn btn-azul editar-btn">Editar Vaga</a>
  </main>
  <aside class="sidebar">
    <h2>Conhecimentos Desejados</h2>
    <ul class="skills">
      {{#each vacante.skills}}
        <li>{{this}}</li>
      {{/each}}
    </ul>

  </aside>
</div>

<div class="contenedor datos-reclutador">
  <div class="enviar-datos">
    <h2>Contatar Recrutador</h2>
    <p>Preencha o formulário abaixo, suba seu cv; em breve entraremos em contato.</p>
    <form method="POST" action="/vacantes/{{vacante.url}}" class="default-form" enctype="multipart/form-data">
      <div class="campo">   
        <label>Nome</label>
        <input type="text" name="nombre" placeholder="seu nome">
      </div>
      <div class="campo">   
        <label>Email</label>
        <input type="email" name="email" placeholder="seu email">
      </div>
      <div class="campo">   
        <label>CV (PDF)</label>
        <input type="file" name="cv">
      </div>
      <div class="campo">   
        <input type="submit" value="Enviar"  class="btn btn-verde">
      </div>
    </form>
  </div>
  <div class="info-reclutador">
    <h2>Informação da Recrutadora</h2>
    {{#if vacante.autor.nombre}}
      <p>{{vacante.autor.nombre}}</p>
    {{/if}}
    {{#if vacante.autor.imagen}}
      
      <img src="/uploads/perfiles/{{vacante.autor.imagen}}"  class="cerrar-sesion img" alt="Image">
      
    {{/if}}
  </div>
</div>