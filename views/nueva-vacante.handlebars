<main class="contenedor">
  <form action="/vacantes/nueva" method="POST" class="default-form">
    <h3>Informações Gerais</h3>
    <div class='campo'>
      <label>Título</label>
      <input type="text" name="titulo" placeholder='p.e. Developer React' >
    </div>
    <div class='campo'>
      <label>Empresa</label>
      <input type="text" name="empresa" placeholder='Empresa Contrata' >
    </div>
    <div class='campo'>
      <label>Localização</label>
      <input type="text" name="ubicacion" placeholder='p.e. São Paulo SP ou Remoto' >
    </div>
    <div class='campo'>
      <label>Salário (USD)</label>
      <input type="text" name="salario" placeholder='p.e. 500 USD' >
    </div>
    <div class='campo'>

      <label>Contrato</label>

      <select name="contrato">
        <option value="" disabled selected>-- Selecione --</option>
        <option value="Freelance">Freelance</option>
        <option value="Tiempo Completo">Horário Comercial</option>
        <option value="Medio Tiempo">Meio Período</option>
        <option value="Por Projeto">Por Projeto</option>
      </select>
    </div>
    <h3>Descrição do Posto</h3>
    <div class="campo descripcion">
      <label>Descrição</label>
      <input type="hidden" id="x" name="descripcion">
      <trix-editor input="x"></trix-editor>
    </div>
    <h3>Conhecimentos</h3>
    <ul class="lista-conocimientos">
      {{#seleccionarSkills a}}
      {{/seleccionarSkills}}
    </ul>
    <div class='campo centrar-horizontal'>
      <input type="hidden" name="skills" id="skills">
      <input type="submit" value="Publicar" class='btn btn-azul'>
    </div>
  </form>
</main>